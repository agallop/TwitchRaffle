<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/secondaryColor">

    <TextView
        android:textSize="20dp"
        android:textColor="@color/primaryColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/prompt"
        android:layout_marginTop="50dp"/>

    <EditText
        android:id="@+id/text_entry"
        android:textColor="@color/primaryColor"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/addButton"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/primaryColor"
        android:textColor="@color/secondaryColor"/>

    <Button
        android:id="@+id/raffle_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/draw"
        android:background="@color/tertiaryColor"
        android:textColor="@color/quaternaryColor"/>


    <Button
        android:id="@+id/reset_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset"
        android:layout_marginTop="25dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/quaternaryColor"
        android:textColor="@color/quinaryColor"/>

    <Button
        android:id="@+id/list_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/list"
        android:layout_marginTop="25dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/quaternaryColor"
        android:textColor="@color/quinaryColor"/>
</LinearLayout>

